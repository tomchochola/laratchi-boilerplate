{
  "name": "tomchochola/laratchi-boilerplate",
  "description": "Laratchi boilerplate",
  "license": "proprietary",
  "type": "project",
  "keywords": [
    "tomchochola",
    "laratchi-boilerplate",
    "laratchi"
  ],
  "authors": [
    {
      "name": "Tomáš Chochola",
      "email": "chocholatom1997@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.2",
    "laravel/framework": "^9.29",
    "laravel/tinker": "^2.7",
    "symfony/http-client": "^6.2",
    "symfony/mailgun-mailer": "^6.2",
    "tomchochola/laratchi": "^3.x-dev"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9.1",
    "laravel/sail": "^1.0.1",
    "mockery/mockery": "^1.4.4",
    "nunomaduro/collision": "^6.1",
    "phpunit/phpunit": "^9.5.10",
    "spatie/laravel-ignition": "^1.0"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/tomchochola/laratchi"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "@php -r \"file_exists('stubs') || (PHP_OS_FAMILY === 'Windows' ? exec('mklink /J '.escapeshellarg('stubs').' '.escapeshellarg('vendor/tomchochola/laratchi/stubs')) : symlink('vendor/tomchochola/laratchi/stubs', 'stubs'));\""
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
      "@php -r \"file_exists('stubs') || (PHP_OS_FAMILY === 'Windows' ? exec('mklink /J '.escapeshellarg('stubs').' '.escapeshellarg('vendor/tomchochola/laratchi/stubs')) : symlink('vendor/tomchochola/laratchi/stubs', 'stubs'));\""
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  }
}
