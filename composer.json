{
  "name": "tomchochola/laratchi-boilerplate",
  "description": "Laratchi boilerplate",
  "license": "proprietary",
  "type": "project",
  "keywords": [
    "tomchochola",
    "laratchi-boilerplate",
    "laratchi",
    "laravel"
  ],
  "authors": [
    {
      "name": "Tomáš Chochola",
      "email": "chocholatom1997@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "doctrine/dbal": "^3.6",
    "guzzlehttp/guzzle": "^7.8",
    "laravel/framework": "^10.20",
    "laravel/tinker": "^2.8",
    "symfony/http-client": "^6.3",
    "symfony/mailgun-mailer": "^6.3",
    "tomchochola/laratchi": "^4.x-dev"
  },
  "require-dev": {
    "composer/composer": "^2.5",
    "fakerphp/faker": "^1.23",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^7.8",
    "phpunit/phpunit": "^10.3",
    "spatie/laravel-ignition": "^2.3"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/tomchochola/laratchi.git"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --force",
      "@php -r \"file_exists('stubs') || (PHP_OS_FAMILY === 'Windows' ? exec('mklink /J '.escapeshellarg('stubs').' '.escapeshellarg('vendor/tomchochola/laratchi/stubs')) : symlink('vendor/tomchochola/laratchi/stubs', 'stubs'));\""
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --force",
      "@php -r \"file_exists('stubs') || (PHP_OS_FAMILY === 'Windows' ? exec('mklink /J '.escapeshellarg('stubs').' '.escapeshellarg('vendor/tomchochola/laratchi/stubs')) : symlink('vendor/tomchochola/laratchi/stubs', 'stubs'));\""
    ],
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate"
    ]
  }
}
