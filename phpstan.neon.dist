includes:
    - tools/phpstan/vendor/spaze/phpstan-disallowed-calls/disallowed-dangerous-calls.neon
    - tools/phpstan/vendor/spaze/phpstan-disallowed-calls/disallowed-execution-calls.neon
    - tools/phpstan/vendor/spaze/phpstan-disallowed-calls/disallowed-insecure-calls.neon
    - tools/phpstan/vendor/spaze/phpstan-disallowed-calls/disallowed-loose-calls.neon

parameters:
  level: max
  paths:
    - app
    - config
    - database
    - lang
    - resources
    - routes
    - tests
  disallowedFunctionCalls:
    -
      function: 'abort()'
      message: 'abort() is banned, use throw new \Symfony\Component\HttpKernel\Exception\HttpException() insteand'
    -
      function: 'abort_if()'
      message: 'abort_if() is banned, use throw new \Symfony\Component\HttpKernel\Exception\HttpException() instead'
    -
      function: 'abort_unless()'
      message: 'abort_unless() is banned, use throw new \Symfony\Component\HttpKernel\Exception\HttpException() instead'
    -
      function: 'action()'
      message: 'action() is banned, use resolveUrlFactory()->action() instead'
    -
      function: 'app()'
      message: 'app() is banned, use resolveApp() instead'
    -
      function: 'app_path()'
      message: 'app_path() is banned, use resolveApp()->path() instead'
    -
      function: 'asset()'
      message: 'asset() is banned, use resolveUrlFactory()->asset() instead'
    -
      function: 'auth()'
      message: 'auth() is banned, use resolveAuthManager() instead'
